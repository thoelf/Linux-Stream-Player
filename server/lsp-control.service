[Unit]
Description=Control LSP
After=syslog.target
Wants=sound.target
After=sound.target

StartLimitIntervalSec=10
StartLimitBurst=10

[Service]
User=thomas
Group=audio
Type=simple
ExecStart=/usr/local/bin/lsp-control.sh
Restart=on-failure
RestartSec=1
StandardError=syslog
SyslogIdentifier=lsp-control

[Install]
WantedBy=default.target
